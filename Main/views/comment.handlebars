<div class="comments">
  {{#each this}}
  <section class="comment  rounded-md mb-2">
    <div class="meta text-center bg-yellow-500 p-1 w-48 font-semibold rounded-tr-lg rounded-tl-lg">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text bg-yellow-300 rounded-tr-lg rounded-br-lg  rounded-bl-lg w-auto p-1">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>