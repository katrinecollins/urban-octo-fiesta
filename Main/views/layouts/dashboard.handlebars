<section>
  <h2 class="font-bold text-2xl py-1">Create A Post</h2>
  <form class="new-post-form w-8/12 border-4 border-yellow-900">
    <div class="w-full">
      <label class="bg-yellow-900 text-yellow-200 font-bold text-2xl p-1 w-full" for="post-title">Title</label>
      <input class="w-full" type="text" id="post-title" name="post-title" />
      <label class="bg-yellow-900 text-yellow-200 font-bold text-2xl p-2 " for="post-url">Content</label>
      <textarea class="w-full" id="post-url" type="text" name="post-url">
      </textarea>
    </div>
    <div class="flex justify-center">
      <button class="bg-yellow-900 text-yellow-200 font-bold text-xl px-6 py-2" type="submit" class="btn">Create-Post</button>
    </div>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a class=" w-24 p-1 rounded edit-link bg-yellow-900 text-yellow-200 text-xl font-bold" href="/dashboard/edit/{{post.id}}">Edit-Post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
